<link rel="stylesheet" href="/styles/admin/coupon.css">

<div class="container-fluid mt-3">
    <div class="row">
        <!-- Sidebar -->
        <div class="col-md-2">
            <div class="container-fluid m-3">
                <h3 id="head" class="mx-auto">WATCH <span style="color: #ffac33;">LY</span></h3>
            </div>
            <nav class="nav flex-column mt-5">
                <a href="#" class="btn mbtn btn-outline-warning mb-2">DASHBOARD</a>
                <a href="/users" class="btn mbtn btn-outline-warning mb-2 ">USERS</a>
                <a href="/products" class="btn mbtn btn-outline-warning mb-2">PRODUCTS</a>
                <a href="/category" class="btn mbtn btn-outline-warning mb-2">CATEGORIES</a>
                <a href="/ordersList" class="btn mbtn btn-outline-warning mb-2">ORDERS</a>
                <a href="/inventory" class="btn mbtn btn-outline-warning mb-2 ">INVENTORY</a>
                <a href="/coupon" class="btn mbtn btn-outline-warning mb-2 active">COUPONS</a>
                <a href="/offer" class="btn mbtn btn-outline-warning mb-2">OFFERS</a>
                <a href="/salesReport" class="btn mbtn btn-outline-warning mb-2">SALES</a>
                <form action="/logout" method="post" class="text-center">
                    <button class="mt-3 btn btn-outline-warning"> Logout</button>
                </form>
            </nav>
        </div>

        <!-- Main Content -->
        <div class="col-md-10">
            <!-- Header -->
            <div class="row dashboard-header mt-5 mb-4">
                <div class="col-md-12">
                    <h1 class="text-center">Coupon Management</h1>
                </div>
            </div>

            <!-- Search and Dropdown -->
            <div class="row mt-4">
                <div class="col-md-6">
                    <input type="text" class="form-control" id="searchUser" placeholder="Search for users...">
                </div>
                <div class="col-md-4">
                    <select class="form-select">
                        <option>Filter by</option>
                        <option value="1">Date Registered</option>
                        <option value="2">Name</option>
                        <option value="3">Email</option>
                    </select>
                </div>
            </div>

            <!-- Table -->
            <div class="row mt-4">
                <div class="col-md-12">
                    <button type="button" class="btn btn-outline-success mb-2" data-bs-toggle="modal"
                        data-bs-target="#couponModal">
                        Create Coupon
                    </button>
                    <div class="table-wrapper">
                        <table class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th scope="col">Coupon Code</th>
                                    <th scope="col">Discount Type</th>
                                    <th scope="col">Discount Value</th>
                                    <th scope="col">Minimum Cart Value</th>
                                    <th scope="col">Usage Limit</th>
                                    <th scope="col">Expiry Date</th>
                                    <th scope="col">Description</th>
                                    <th scope="col">Applicable Products</th>
                                    <th scope="col">Applicable Categories</th>
                                    <th scope="col">Actions</th>
                                </tr>
                            </thead>
                            <tbody id="userTable">
                                {{#each Coupons}}
                                <tr>
                                    <td>{{code}}</td>
                                    <td>{{discountType}}</td>
                                    <td>{{discountValue}}</td>
                                    <td>{{minimumCartValue}}</td>
                                    <td>{{usageLimit}}</td>
                                    <td>{{formatDate expiryDate 'yy/MM/yyyy'}}</td>
                                    <td>{{description}}</td>
                                    <td>
                                        {{#if (isEmpty applicableProducts)}}
                                        All Products
                                        {{else}}
                                        {{#each applicableProducts}}
                                        {{this.productName}}<br>
                                        {{/each}}
                                        {{/if}}
                                    </td>
                                    <td>
                                        {{#if (isEmpty applicableCategories)}}
                                        All Categories
                                        {{else}}
                                        {{#each applicableCategories}}
                                        {{this.brandName}}<br>
                                        {{/each}}
                                        {{/if}}
                                    </td>

                                    <td>
                                        <form action="/deleteCoupon/{{this._id}}?_method=DELETE" method="post">
                                            <button class="btn btn-sm btn-danger ms-1 my-auto"
                                                type="submit">Delete</button>
                                        </form>
                                    </td>
                                </tr>
                                {{else}}
                                <tr>
                                    <td colspan="8" class="text-center">No offers found.</td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                    {{#if (gt totalCoupons 5)}}
                    <!-- Pagination Controls -->
                    <nav aria-label="Page navigation">
                        <ul class="pagination justify-content-center pages custom-pagination">
                            {{#if (gt currentPage 1)}}
                            <li class="page-item">
                                <a class="page-link" href="?page={{sub currentPage 1}}" aria-label="Previous">
                                    <span aria-hidden="true">&laquo;</span>
                                </a>
                            </li>
                            {{/if}}

                            {{#each (range 1 totalPages)}}
                            <li class="page-item {{#if (eq this ../currentPage)}}active{{/if}}">
                                <a class="page-link" href="?page={{this}}">{{this}}</a>
                            </li>
                            {{/each}}

                            {{#if (lt currentPage totalPages)}}
                            <li class="page-item">
                                <a class="page-link" href="?page={{add currentPage 1}}" aria-label="Next">
                                    <span aria-hidden="true">&raquo;</span>
                                </a>
                            </li>
                            {{/if}}
                        </ul>
                    </nav>
                    {{/if}}
                    
                </div>
            </div>

            {{!-- Add --}}

            <div class="modal fade" id="couponModal" tabindex="-1" aria-labelledby="couponModalLabel"
                aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="couponModalLabel">Create New Coupon</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <form id="createCouponForm" method="POST">
                                <div class="mb-3">
                                    <label for="couponCode" class="form-label">Coupon Code</label>
                                    <input type="text" class="form-control" id="couponCode" name="code">
                                </div>
                                <div class="mb-3">
                                    <label for="discountType" class="form-label">Discount Type</label>
                                    <select class="form-select" id="discountType" name="discountType">
                                        <option value="percentage">Percentage</option>
                                        <option value="fixed">Fixed</option>
                                    </select>
                                </div>
                                <div class="mb-3">
                                    <label for="discountValue" class="form-label">Discount Value</label>
                                    <input type="number" class="form-control" id="discountValue" name="discountValue">
                                </div>
                                <div class="mb-3">
                                    <label for="minimumCartValue" class="form-label">Minimum Cart Value</label>
                                    <input type="number" class="form-control" id="minimumCartValue"
                                        name="minimumCartValue">
                                </div>
                                <div class="mb-3">
                                    <label for="usageLimit" class="form-label">Usage Limit</label>
                                    <input type="number" class="form-control" id="usageLimit" name="usageLimit">
                                </div>
                                <div class="mb-3">
                                    <label for="expiryDate" class="form-label">Expiry Date</label>
                                    <input type="date" class="form-control" id="expiryDate" name="expiryDate">
                                </div>

                                <div class="mb-3">
                                    <label for="Description" class="form-label">Description</label>
                                    <input type="text" class="form-control" id="description" name="description">
                                </div>

                                <!-- Product Dropdown with Checkboxes -->
                                <div class="dropdown mb-3">
                                    <button class="btn dropdown-toggle" type="button" id="dropdownProductsButton"
                                        data-bs-toggle="dropdown" aria-expanded="false">
                                        Select Products
                                    </button>
                                    <ul class="dropdown-menu" aria-labelledby="dropdownProductsButton">
                                        <li>
                                            <div class="form-check">
                                                <input class="form-check-input" type="checkbox" id="selectAllProducts">
                                                <label class="form-check-label" for="selectAllProducts">
                                                    Select All
                                                </label>
                                            </div>
                                        </li>
                                        {{#each products}}
                                        <li>
                                            <div class="form-check">
                                                <input class="form-check-input product-checkbox" type="checkbox"
                                                    name="products[]" value="{{_id}}" id="product{{_id}}">
                                                <label class="form-check-label" for="product{{_id}}">
                                                    {{productName}}
                                                </label>
                                            </div>
                                        </li>
                                        {{/each}}
                                    </ul>
                                </div>
                                <div id="selectedProductsContainer" class="mt-2"></div>

                                <!-- Category Dropdown with Checkboxes -->
                                <div class="dropdown mt-3">
                                    <button class="btn dropdown-toggle" type="button" id="dropdownCategoriesButton"
                                        data-bs-toggle="dropdown" aria-expanded="false">
                                        Select Categories
                                    </button>
                                    <ul class="dropdown-menu" aria-labelledby="dropdownCategoriesButton">
                                        <li>
                                            <div class="form-check">
                                                <input class="form-check-input" type="checkbox"
                                                    id="selectAllCategories">
                                                <label class="form-check-label" for="selectAllCategories">
                                                    Select All
                                                </label>
                                            </div>
                                        </li>
                                        {{#each categories}}
                                        <li>
                                            <div class="form-check">
                                                <input class="form-check-input category-checkbox" type="checkbox"
                                                    name="categories[]" value="{{_id}}" id="category{{_id}}">
                                                <label class="form-check-label" for="category{{_id}}">
                                                    {{brandName}}
                                                </label>
                                            </div>
                                        </li>
                                        {{/each}}
                                    </ul>
                                </div>
                                <div id="selectedCategoriesContainer" class="mt-2"></div>
                            </form>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-outline-secondary"
                                data-bs-dismiss="modal">Close</button>
                            <button type="submit" class="btn btn-outline-warning" form="createCouponForm">Create
                                Coupon</button>
                        </div>
                    </div>
                </div>
            </div>


        </div>
    </div>
</div>

<div class="toast align-items-center text-white bg-danger border-0" id="errorToast" role="alert" aria-live="assertive"
    aria-atomic="true" style="position: fixed; top: 20px; right: 20px; z-index: 1100; min-width: 250px;">
    <div class="d-flex">
        <div class="toast-body" id="toastBody">

        </div>
        <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"
            aria-label="Close"></button>
    </div>
</div>



<script src="/javaScript/admin/coupon.js"></script>