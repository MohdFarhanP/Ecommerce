<link rel="stylesheet" href="/styles/admin/dashboard.css">

<div class="container-fluid mt-3">
    <div class="row">
        <!-- Sidebar -->
        <div class="col-md-2">
            <div class="container-fluid m-3">
                <h3 id="head" class="mx-auto">WATCH <span style="color: #ffac33;">LY</span></h3>
            </div>
            <nav class="nav flex-column mt-5">
                <a href="/dashboard" class="btn mbtn btn-outline-warning mb-2 ">DASHBOARD</a>
                <a href="/users" class="btn mbtn btn-outline-warning mb-2 ">USERS</a>
                <a href="/products" class="btn mbtn btn-outline-warning mb-2">PRODUCTS</a>
                <a href="/category" class="btn mbtn btn-outline-warning mb-2 ">CATEGORIES</a>
                <a href="/ordersList" class="btn mbtn btn-outline-warning mb-2 ">ORDERS</a>
                <a href="/inventory" class="btn mbtn btn-outline-warning mb-2">INVENTORY</a>
                <a href="/coupon" class="btn mbtn btn-outline-warning mb-2">COUPONS</a>
                <a href="/offer" class="btn mbtn btn-outline-warning mb-2">OFFERS</a>
                <a href="/salesReport" class="btn mbtn btn-outline-warning mb-2">SALES</a>
                <a href="/ledger" class="btn mbtn btn-outline-warning mb-2 active">LEDGER</a>
                <form action="/logout" method="post" class="text-center">
                    <button class="mt-3 btn btn-outline-warning"> Logout</button>
                </form>
            </nav>
        </div>

        <!-- Main Content -->
        <div class="col-md-10">
            <div class="row dashboard-header mt-5 mb-4">
                <div class="col-md-12">
                    <h1 class="text-center">LEDGER ENTRIES</h1>
                </div>
            </div>

            <!-- Ledger Table -->
            <div class="row">
                <div class="col-md-12">
                    <div class="table-wrapper">
                        <table class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>Description</th>
                                <th>Amount</th>
                                <th>Type</th>
                                <th>Date</th>
                                <th>Order ID</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each entries}}
                            <tr>
                                <td>{{this.description}}</td>
                                <td>{{this.amount}}</td>
                                <td>{{this.type}}</td>
                                <td>{{formatDate this.date 'dd/MM/yyyy'}}</td> 
                                <td><a href="#" class="order-link" data-order-id="{{this.orderId._id}}">{{this.orderId._id}}</a>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Modal -->
<div class="modal fade" id="orderDetailsModal" tabindex="-1" aria-labelledby="orderDetailsModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="orderDetailsModalLabel">Order Details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="modalOrderDetails">
                <!-- Order details will be inserted here -->
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<script src="/javaScript/admin/ledger.js"></script>
