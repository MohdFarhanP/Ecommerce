<link rel="stylesheet" href="/styles/admin/users.css">

<div class="container-fluid mt-3">
    <div class="row">
        <!-- Sidebar -->
        <div class="col-md-2">
            <div class="container-fluid m-3">
                <h3 id="head" class="mx-auto">WATCH <span style="color: #ffac33;">LY</span></h3>
            </div>
            <nav class="nav flex-column mt-5">
                <a href="/dashboard" class="btn mbtn btn-outline-warning mb-2">DASHBOARD</a>
                <a href="/users" class="btn mbtn btn-outline-warning mb-2 active">USERS</a>
                <a href="/products" class="btn mbtn btn-outline-warning mb-2">PRODUCTS</a>
                <a href="/category" class="btn mbtn btn-outline-warning mb-2">CATEGORIES</a>
                <a href="/ordersList" class="btn mbtn btn-outline-warning mb-2">ORDERS</a>
                <a href="/inventory" class="btn mbtn btn-outline-warning mb-2">INVENTORY</a>
                <a href="/coupon" class="btn mbtn btn-outline-warning mb-2">COUPONS</a>
                <a href="/offer" class="btn mbtn btn-outline-warning mb-2">OFFERS</a>
                <a href="/salesReport" class="btn mbtn btn-outline-warning mb-2">SALES</a>
                <a href="/ledger" class="btn mbtn btn-outline-warning mb-2 ">LEDGER</a>
                <form action="/logout" method="post" class="text-center">
                    <button class="mt-3 btn btn-outline-warning"> Logout</button>
                </form>
            </nav>
        </div>

        <!-- Main Content -->
        <div class="col-md-10">
            <!-- Header -->
            <div class="row dashboard-header mt-5 mb-4">
                <div class="col-md-12">
                    <h1 class="text-center">User Management</h1>
                </div>
            </div>

            <!-- Search and Filter -->
            <div class="row mb-3">
                <div class="col-md-6">
                    <input type="text" class="form-control" id="searchUser" placeholder="Search for users...">
                </div>
                <div class="col-md-4">
                    <select class="form-select">
                        <option>Filter by</option>
                        <option value="1">Date Registered</option>
                        <option value="2">Name</option>
                        <option value="3">Email</option>
                    </select>
                </div>
            </div>

            <!-- User Table -->
            <div class="table-responsive">
                <table class="table table-striped table-bordered">
                    <thead class="thead-light">
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Email Address</th>
                            <th>Reg At</th>
                            <th>Status</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody id="userTable">
                        {{#each data}}
                        <tr>
                            <td>{{_id}}</td>
                            <td>{{userName}}</td>
                            <td>{{email}}</td>
                            <td>{{formatDate createdAt 'dd/MM/yyyy'}}</td>
                            <td>{{#if isBlocked}}<span class="text-danger">Blocked</span>{{else}}<span
                                    class="text-success">Active</span>{{/if}}</td>
                            <td>
                                {{#if isBlocked}}
                                <form action="/unblock/{{_id}}?_method=PATCH" method="POST" class="d-inline">
                                    <button class="btn btn-warning" type="submit">Unblock</button>
                                </form>
                                {{else}}
                                <form action="/block/{{_id}}?_method=PATCH" method="POST" class="d-inline">
                                    <button class="btn btn-danger" type="submit">Block</button>
                                </form>
                                {{/if}}
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>

                {{#if (gt totalUsers 5)}}
                <!-- Pagination Controls -->
                <nav aria-label="Page navigation">
                    <ul class="pagination justify-content-center pages custom-pagination">
                        {{#if (gt currentPage 1)}}
                        <li class="page-item">
                            <a class="page-link" href="?page={{sub currentPage 1}}" aria-label="Previous">
                                <span aria-hidden="true">&laquo;</span>
                            </a>
                        </li>
                        {{/if}}

                        {{#each (range 1 totalPages)}}
                        <li class="page-item {{#if (eq this ../currentPage)}}active{{/if}}">
                            <a class="page-link" href="?page={{this}}">{{this}}</a>
                        </li>
                        {{/each}}

                        {{#if (lt currentPage totalPages)}}
                        <li class="page-item">
                            <a class="page-link" href="?page={{add currentPage 1}}" aria-label="Next">
                                <span aria-hidden="true">&raquo;</span>
                            </a>
                        </li>
                        {{/if}}
                    </ul>
                </nav>
                {{/if}}
            </div>
        </div>
    </div>
</div>