<link rel="stylesheet" href="/styles/admin/categories.css">

<div class="container-fluid mt-3">
    <div class="row">
        <!-- Sidebar -->
        <div class="col-md-2">
            <div class="container-fluid m-3">
                <h3 id="head" class="mx-auto">WATCH <span style="color: #ffac33;">LY</span></h3>
            </div>
            <nav class="nav flex-column mt-5">
                <a href="#" class="btn mbtn btn-outline-warning mb-2">DASHBOARD</a>
                <a href="#" class="btn mbtn btn-outline-warning mb-2 ">USERS</a>
                <a href="#" class="btn mbtn btn-outline-warning mb-2">PRODUCTS</a>
                <a href="#" class="btn mbtn btn-outline-warning mb-2 active">CATEGORIES</a>
                <a href="#" class="btn mbtn btn-outline-warning mb-2">ORDERS</a>
                <a href="#" class="btn mbtn btn-outline-warning mb-2">COUPONS</a>
                <a href="#" class="btn mbtn btn-outline-warning mb-2">OFFERS</a>
                <a href="#" class="btn mbtn btn-outline-warning mb-2">SALES</a>
            </nav>
        </div>

        <!-- Main Content -->
        <div class="col-md-10">
            <!-- Header -->
            <div class="row dashboard-header mt-5">
                <div class="col-md-12">
                    <h1 class="text-center">ADMIN DASHBOARD</h1>
                </div>
            </div>

            <!-- Search and Dropdown -->
            <div class="row mt-4">
                <div class="col-md-6">
                    <input type="text" class="form-control" id="searchUser" placeholder="Search for users...">
                </div>
                <div class="col-md-4">
                    <select class="form-select">
                        <option>Filter by</option>
                        <option value="1">Date Registered</option>
                        <option value="2">Name</option>
                        <option value="3">Email</option>
                    </select>
                </div>
            </div>

            <!-- Table -->
            <div class="row mt-4">
                <div class="col-md-12">
                     <button type="submit" id="addbtn" class="btn btn-success m-2" onclick="showAddCategory()">AddUser</button>
                    <div class="table-wrapper">
                        <table class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Brands</th>
                                    <th>DisplayType</th>
                                    <th>BandColor</th>
                                    <th>status</th>
                                    <th scope="col" colspan="2" class="text-center">Actions</th>
                                </tr>
                            </thead>
                            <tbody id="userTable">
                                {{#each category}}
                                <tr>
                                    <td>{{_id}}</td>
                                    <td>{{brandName}}</td>
                                    <td>{{displayType}}</td>
                                    <td>{{bandColor}}</td>
                                    <td>{{#if isDelete}}deleted{{else}}Active{{/if}}</td>
                                    <td class="align-middle text-center">
                                        <button type="button" class="btn btn-warning btn-sm"
                                            onclick="showEditCategory('{{brandName}}','{{displayType}}','{{bandColor}}','{{_id}}')">Edit</button>
                                    </td>
                                    <td class="align-middle text-center">
                                        <form action="/admin/deleteCategory" method="post" onsubmit="return confirm('Are you sure want to delete this user ? ')">
                                            <input type="hidden" name="id" value="{{_id}}">
                                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                        </form>
                                    </td>
                                </tr>
                                {{/each}}

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            {{!-- Edit category --}}
            <div class="card bg-light mb-3 w-50 mx-auto d-none" id="editCategory">
                <div class="card-header text-center d-flex justify-content-between">
                    Edit Category
                    <button type="button" onclick="hideEditCategory()" class="close" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <form action="/admin/editCategory" method="post">
                    <div class="card-body">
                        <div class="mb-3">
                            <input type="text" id="categoryId" name="id" hidden>
                           
                            <input type="text" class="form-control" name="brandName" id="brandName"
                                placeholder="Brand Name" required>
                        </div>
                        <div class="mb-3">
                            
                            <input type="text" class="form-control" name="displayType" id="displayType"
                                placeholder="Display Type" required>
                        </div>
                        <div class="mb-3">
                            
                            <input type="text" class="form-control" name="bandColor" id="bandColor"
                                placeholder="Band Color" required>
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn btn-warning">Save Changes</button>
                        </div>
                    </div>
                </form>
            </div>
            {{!-- / Edit category --}}

            {{!-- Add category --}}

            <div class="card bg-light mb-3 w-50 mx-auto d-none" id="addCategory">
                <div class="card-header text-center d-flex justify-content-between">
                    Add Category
                    <button type="button" onclick="hideAddCategory()" class="close" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <form action="/admin/addCategory" method="post">
                    <div class="card-body">
                        <div class="mb-3">
                         
                            <input type="text" class="form-control" name="brandName"
                                placeholder="Brand Name" required>
                        </div>
                        <div class="mb-3">
                           
                            <input type="text" class="form-control" name="displayType" 
                                placeholder="Display Type" required>
                        </div>
                        <div class="mb-3">
                          
                            <input type="text" class="form-control" name="bandColor" 
                                placeholder="Band Color" required>
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn btn-success">Add Category</button>
                        </div>
                    </div>
                </form>
            </div>
            {{!-- / Add category --}}

        </div>
    </div>
</div>



<script src="/javaScript/admin/category.js"></script>