<link rel="stylesheet" href="/styles/admin/orders.css">

<div class="container-fluid mt-3">
    <div class="row">
        <!-- Sidebar -->
        <div class="col-md-2">
            <div class="container-fluid m-3">
                <h3 id="head" class="mx-auto">WATCH <span style="color: #ffac33;">LY</span></h3>
            </div>
            <nav class="nav flex-column mt-5">
                <a href="#" class="btn mbtn btn-outline-warning mb-2">DASHBOARD</a>
                <a href="/users" class="btn mbtn btn-outline-warning mb-2 ">USERS</a>
                <a href="/products" class="btn mbtn btn-outline-warning mb-2">PRODUCTS</a>
                <a href="/category" class="btn mbtn btn-outline-warning mb-2 ">CATEGORIES</a>
                <a href="/ordersList" class="btn mbtn btn-outline-warning mb-2 active">ORDERS</a>
                <a href="/inventory" class="btn mbtn btn-outline-warning mb-2">INVENTORY</a>
                <a href="/coupon" class="btn mbtn btn-outline-warning mb-2">COUPONS</a>
                <a href="/offer" class="btn mbtn btn-outline-warning mb-2">OFFERS</a>
                <a href="#" class="btn mbtn btn-outline-warning mb-2">SALES</a>
                <form action="/logout" method="post" class="text-center">
                    <button class="mt-3 btn btn-outline-warning"> Logout</button>
                </form>
            </nav>
        </div>

        <!-- Main Content -->
        <div class="col-md-10">
            <!-- Header -->
            <div class="row dashboard-header mt-5 mb-4">
                <div class="col-md-12">
                    <h1 class="text-center">Order Management</h1>
                </div>
            </div>

            <!-- Search and Dropdown -->
            <div class="row mt-4">
                <div class="col-md-6">
                    <input type="text" class="form-control" id="searchUser" placeholder="Search for users...">
                </div>
                <div class="col-md-4">
                    <select class="form-select">
                        <option>Filter by</option>
                        <option value="1">Date Registered</option>
                        <option value="2">Name</option>
                        <option value="3">Email</option>
                    </select>
                </div>
            </div>

            <!-- Table -->
            <div class="row mt-4">
                <div class="col-md-12">
                    <div class="table-wrapper">
                        <table class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>Order ID</th>
                                    <th>User</th>
                                    <th>Total Amount</th>
                                    <th>Status</th>
                                    <th>Delivery Address</th>
                                    <th>Order Date</th>
                                    <th>Products</th> <!-- New Column for Products -->
                                    <th>Order Quantity</th> <!-- New Column for Quantity -->
                                    <th scope="col" colspan="2" class="text-center">Actions</th>
                                </tr>
                            </thead>
                            <tbody id="orderTable">
                                {{#each orders}}
                                <tr>
                                    <td>{{_id}}</td>
                                    <td>{{userId.userName}}</td>
                                    <td>â‚¹{{totalAmount}}</td>
                                    <td>{{status}}</td>
                                    <td>{{shippingAddress.addressLine}}, {{shippingAddress.city}}</td>
                                    <td>{{formatDate createdAt 'dd/MM/yyyy'}}</td>

                                    <!-- New Cells for Products and Quantities -->
                                    <td>
                                        {{#each products}}
                                        {{this.productId.productName}}<br>
                                        {{/each}}
                                    </td>
                                    <td>
                                        {{#each products}}
                                        {{this.quantity}}<br>
                                        {{/each}}
                                    </td>

                                    <td class="align-middle text-center">
                                        <form action="/changeOrderStatus" method="post" style="display:inline;">
                                            <input type="hidden" name="orderId" value="{{_id}}">
                                            <select name="status" class="form-select">
                                                <option value="Pending" {{#if (eq status "Pending" )}}selected{{/if}}>
                                                    Pending</option>
                                                <option value="Shipped" {{#if (eq status "Shipped" )}}selected{{/if}}>
                                                    Shipped</option>
                                                <option value="Delivered" {{#if (eq status "Delivered"
                                                    )}}selected{{/if}}>Delivered</option>
                                                <option value="Canceled" {{#if (eq status "Canceled" )}}selected{{/if}}>
                                                    Canceled</option>
                                            </select>
                                            <button type="submit" class="btn btn-warning btn-sm">Change Status</button>
                                        </form>
                                    </td>
                                    <td class="align-middle text-center">
                                        <form action="/cancelOrder" method="post"
                                            onsubmit="return confirm('Are you sure you want to cancel this order?');"
                                            style="display:inline;">
                                            <input type="hidden" name="orderId" value="{{_id}}">
                                            <button type="submit" class="btn btn-danger btn-sm">Cancel Order</button>
                                        </form>
                                    </td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                    <!-- Pagination Controls -->
                    <nav aria-label="Page navigation">
                        <ul class="pagination justify-content-center pages custom-pagination">
                            {{#if (gt currentPage 1)}}
                            <li class="page-item">
                                <a class="page-link" href="?page={{sub currentPage 1}}" aria-label="Previous">
                                    <span aria-hidden="true">&laquo;</span>
                                </a>
                            </li>
                            {{/if}}

                            {{#each (range 1 totalPages)}}
                            <li class="page-item {{#if (eq this ../currentPage)}}active{{/if}}">
                                <a class="page-link" href="?page={{this}}">{{this}}</a>
                            </li>
                            {{/each}}

                            {{#if (lt currentPage totalPages)}}
                            <li class="page-item">
                                <a class="page-link" href="?page={{add currentPage 1}}" aria-label="Next">
                                    <span aria-hidden="true">&raquo;</span>
                                </a>
                            </li>
                            {{/if}}
                        </ul>
                    </nav>

                </div>
            </div>
        </div>
    </div>
</div>



<script src="/javaScript/admin/category.js"></script>