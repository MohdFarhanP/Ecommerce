<link rel="stylesheet" href="/styles/user/wallet.css">


{{>header}}

<div class="container mt-3">
    <div class="row mt-5 ">
        <!-- Sidebar -->

        {{>profileSidebar}}

        <div class="col-md-10 formContainer mt-4 bg1">
            <div class="container">

                <div class="wallet-page">
                    <h2>Your Wallet Balance: â‚¹{{Balance}}</h2>
                    <h3>Transaction History</h3>
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Date</th>
                                <th>Description</th>
                                <th>Type</th>
                                <th>Amount</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each transactions}}
                            <tr>
                                <td>{{formatDate this.createdAt 'dd/MM/yyyy'}}</td>
                                <td>{{this.description}}</td>
                                <td>{{this.transactionType}}</td>
                                <td>{{this.amount}}</td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>


            </div>
        </div>
    </div>
</div>

<!-- Footer -->
{{>footer}}