<link rel="stylesheet" href="/styles/user/otp.css">

<div class="container-fluid m-3 shadow-navbar">
    <h3 id="head" class="mx-auto">WATCH <span style="color: #ffac33;">LY</span></h3>
</div>

<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-md-4">
            <div class="card" id="card">

                <div>
                    <h3 class="text-center mt-5">OTP</h3>
                </div>

                <p id="timer" class="text-center">OTP will expire in <span id="countdown">{{remainTime }}</span>
                    seconds.</p>

                <p class=" text-center mt-3">Please Enter your OTP</p>

                <span id="error" hidden>{{error}}</span>

                <div class="card-body mt-1">
                    <form class="login" id="loginform" action="/verifyOtp" method="post">

                        <div class="mb-3">
                            <input type="text" class="form-control" id="otp" name="otp">
                        </div>

                        <input type="text" name="id" value="{{id}}" hidden>

                        <div class="d-grid gap-2 col-6 mx-auto mb-2">
                            <button type="submit" class="btn btn-dark text-white">Verify OTP</button>
                        </div>
                    </form>

                    <form action="/resendOtp" method="POST" id="resendOtpForm" hidden>
                        <button class="btn" type="submit">Resend OTP</button>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap Toast for inline messages -->
<div class="toast-container position-fixed top-0 end-0 p-3">
    <div id="errorToast" class="toast align-items-center text-white bg-danger border-0" role="alert" aria-live="assertive" aria-atomic="true">
        <div class="d-flex">
            <div class="toast-body" id="toastMessage">

            </div>
            <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
        </div>
    </div>
</div>

<script src="/javaScript/user/otp.js"></script>