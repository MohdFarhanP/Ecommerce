<header>
    <nav class="navbar navbar-expand-lg shadow-navbar">
        <div class="container-fluid py-auto px-auto">
            <h3 id="head" class="m-2">WATCH <span style="color: #ffac33;">LY</span></h3>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mx-auto mb-2 mb-lg-0">
                    <li class="nav-item"><a class="nav-link active" aria-current="page" href="/home">Home</a></li>
                    <li class="nav-item"><a class="nav-link active" aria-current="page" href="/orders">Orders</a>
                    </li>
                    <li class="nav-item"><a class="nav-link active" aria-current="page" href="/ProductList">Products</a>
                    </li>
                    <li class="nav-item"><a class="nav-link active" aria-current="page" href="/contactus">Contact</a>
                    </li>
                    <li class="nav-item"><a class="nav-link active" aria-current="page" href="/Aboutus">About
                            us</a></li>
                </ul>

                <ul class="navbar-nav ml-auto mb-2 mb-lg-0">
                    <li class="nav-item"><a class="nav-link active" aria-current="page" href="#"><i
                                class="fa-solid fa-magnifying-glass"></i></a></li>
                    <li class="nav-item"><a class="nav-link active" aria-current="page" href="#"><i
                                class="fa-regular fa-heart"></i></a></li>
                    <li class="nav-item"><a class="nav-link active" aria-current="page" href="/logOut"><i
                                class="fa-regular fa-user"></i></a></li>
                    <li class="nav-item"><a class="nav-link active" aria-current="page" href="#"><i
                                class="fa-solid fa-cart-shopping"></i></a></li>
                </ul>
            </div>
        </div>
    </nav>
</header>

<div class="container mt-3">
    <div class="row mt-5">
        <!-- Sidebar -->
        <div class="col-md-2">
            <div class="container-fluid">
                <span class="fw-bold">Account & Settings</span>
                <hr>
            </div>

            <nav class="nav flex-column mt-2">
                <a href="/userProfile" class="btn btn-outline-warning mb-2">User Details</a>
                <a href="/orders" class="btn btn-outline-warning mb-2 active">Orders</a>
                <a href="#" class="btn btn-outline-warning mb-2">PRODUCTS</a>
                <a href="#" class="btn btn-outline-warning mb-2">CATEGORIES</a>
                <a href="#" class="btn btn-outline-warning mb-2">COUPONS</a>
                <a href="#" class="btn btn-outline-warning mb-2">OFFERS</a>
                <a href="#" class="btn btn-outline-warning mb-2">SALES</a>
            </nav>
        </div>

        <div class="col-md-10 mt-4 bg1">
            {{#each orders}}

            <div class="container row mt-3">
                <div class="col-md-12">
                    {{#each this.products}}
                    <div class="card mb-3">
                        <div class="row g-0">
                            <div class="col-md-2">
                                <img src="/uploads/{{this.productId.images.[0]}}" class="img-fluid rounded-start"
                                    alt="{{this.productId.productName}}">
                            </div>
                            <div class="col-md-10">
                                <div class="row">
                                    <div class="col-md-7 card-body">
                                        <h5 class="card-title">Delivered on 25/05/2025</h5>

                                        <p class="card-text">Product Name: {{this.productId.productName}}</p>
                                        <p class="card-text">Quantity: {{this.quantity}}</p>
                                        <p class="card-text">Price: ₹{{this.productId.productPrice}}</p>
                                        <p class="card-text">Total Amount: ₹{{../totalAmount}}</p>

                                        <p class="card-text">Payment Status: {{../paymentStatus}}</p>

                                        <p class="card-text">Shipping Address: {{../shippingAddress.addressLine}},
                                            {{../shippingAddress.city}}</p>
                                        <div class="d-flex">
                                            <p class="card-text"><small class="text-body-secondary">Order ID:
                                                    {{../_id}}</small></p>
                                            <p class="card-text ms-4"><small class="text-body-secondary">Status:
                                                    {{../status}}</small></p>
                                        </div>
                                    </div>
                                    <div class="col-md-5 d-flex justify-content-center align-items-center">
                                        <button class="btn btn-warning me-2">View Details</button>
                                        <form action="/cancelProduct" method="post">
                                            <input type="hidden" name="orderId" value="{{../_id}}">
                                            <input type="hidden" name="productId" value="{{this.productId._id}}">
                                            <button class="btn btn-danger">Cancel Product</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    {{/each}}
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</div>