      <h3 id="head" class="m-2">WATCH <span style="color: #ffac33;">LY</span></h3>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mx-auto mb-2 mb-lg-0">
          <li class="nav-item"><a class="nav-link active" aria-current="page" href="/home">Home</a></li>
          <li class="nav-item"><a class="nav-link active" aria-current="page" href="/orders">Orders</a></li>
          <li class="nav-item"><a class="nav-link active" aria-current="page" href="/ProductList">Products</a></li>
          <li class="nav-item"><a class="nav-link active" aria-current="page" href="/contactus">Contact</a></li>
          <li class="nav-item"><a class="nav-link active" aria-current="page" href="/Aboutus">About us</a></li>
        </ul>

        <ul class="navbar-nav ml-auto mb-2 mb-lg-0">
          <div class="input-group">
            <form class="d-flex" action="/search" method="GET">
              <input class="form-control px-5" type="search" name="q" placeholder="Search products..."
                aria-label="Search">
              <button class="btn btn-outline" type="submit"><i class="fa-solid fa-magnifying-glass"></i></button>
            </form>
          </div>  
          <li class="nav-item"><a class="nav-link active" aria-current="page" href="/logOut"><i
                class="fa-regular fa-heart"></i></a></li>
          <li class="nav-item"><a class="nav-link active" aria-current="page" href="/userProfile"><i
                class="fa-regular fa-user"></i></a></li>
          <li class="nav-item"><a class="nav-link active" aria-current="page" href="/cart"><i
                class="fa-solid fa-cart-shopping"></i></a></li>
        </ul>
      </div>
    </div>
  </nav>
</header>

<div class="container mt-3">
    <div class="row mt-5 ">
        <!-- Sidebar -->
        <div class="col-md-2">
            <div class="container-fluid">
                <span class="fw-bold">Account & Settings</span>
                <hr>
            </div>
            <nav class="nav flex-column mt-2">
                <a href="/userProfile" class="btn btn-outline-warning mb-2">User Details</a>
                <a href="/orders" class="btn btn-outline-warning mb-2 active">Orders</a>
                <a href="/logOut" class="btn text-warning mb-2 mt-4 px-auto">
                    <i class="fa-solid fa-right-from-bracket me-3"></i>Log out
                </a>
            </nav>
        </div>

        <div class="col-md-10 mt-4 bg1">
            <div class="row d-flex justify-content-center mt-4">
                <div class="col-md-3">
                    <a href="/userProfile/">
                        <button class="btn mbtn btn-outline-warning w-100 ">Update User</button>
                    </a>
                </div>
                <div class="col-md-3">
                    <a href="/passwordUpdate">
                        <button class="btn mbtn btn-outline-warning w-100 active">Password</button>
                    </a>
                </div>
                <div class="col-md-3">
                    <a href="/address">
                        <button class="btn mbtn btn-outline-warning w-100">Address</button>
                    </a>
                </div>
            </div>


            {{#if (eq loginMethod "google")}}
            <p class="text-center mt-5"><b>You logged in using Google. Password functionality is disabled.</b></p>

            {{else if (eq loginMethod "facebook")}}
            <p class="text-center mt-5"><b>You logged in using Facebook. Password functionality is disabled.</b></p>

            {{else}}
            <div class="container">
                <div class="row details justify-content-center">
                    <div class="col-sm-12 col-md-6 card p-5 mb-5">
                        <form action="/passwordUpdate" id="passwordForm" method="post">
                            <div id="editPasswordError" class="alert alert-danger" role="alert">
                                {{err}}
                            </div>
                            <input type="text" value="{{userId}}" name="id" hidden>
                            <input type="text" id="msg" value="{{msg}}" hidden>
                            <label for="oldPassword" class="form-label mb-2">Old Password</label>
                            <input type="password" id="oldPassword" name="oldPassword" class="form-control"
                                placeholder="Enter your old password">

                            <label for="newPassword" class="form-label mb-2">New Password</label>
                            <input type="password" id="newPassword" name="password" class="form-control"
                                placeholder="Enter new password">

                            <label for="confirmPassword" class="form-label mb-2">Confirm Password</label>
                            <input type="password" id="confirmPassword" name="conformPassword" class="form-control"
                                placeholder="Confirm password">

                            <div class="text-center">
                                <button type="submit" class="btn btn-warning mt-4 w-100">Update Password</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            {{/if}}
        </div>
    </div>
</div>
<script src="/javaScript/user/passwordUpdates.js"></script>