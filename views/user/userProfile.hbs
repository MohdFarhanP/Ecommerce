<div class="container mt-3">
    <div class="row mt-5 ">
        <!-- Sidebar -->
        <div class="col-md-2">
            <div class="container-fluid">
                <span class="fw-bold">Account & Settings</span>
                <hr>
            </div>

            <nav class="nav flex-column mt-2">
                <a href="/userProfile" class="btn btn-outline-warning mb-2 active">User Details</a>
                <a href="/orders" class="btn btn-outline-warning mb-2 ">Orders</a>
                <a href="/whishList" class="btn btn-outline-warning mb-2 ">whishList</a>
                <a href="/logOut" class="btn text-warning mb-2  mt-4 px-auto"><i class="fa-solid fa-right-from-bracket me-3"></i>Log out</a>
            </nav>
        </div>

        <div class="col-md-10 mt-4 bg1">
            <div class="row d-flex justify-content-center mt-4">
                <div class="col-md-3">
                    <a href="/userProfile">
                        <button class="btn mbtn btn-outline-warning w-100 active">Update User</button>
                    </a>
                </div>
                <div class="col-md-3">
                    <a href="/passwordUpdate">
                        <button class="btn mbtn btn-outline-warning w-100">Password</button>
                    </a>
                </div>
                <div class="col-md-3">
                    <a href="/address">
                        <button class="btn mbtn btn-outline-warning w-100">Address</button>
                    </a>
                </div>
            </div>
            <div class="container">
                <div class="row details justify-content-center">
                    <div class="col-sm-12 col-md-6 card px-5 pt-5 pb-3  mb-5">

                        <form action="/userEdit" method="post">
                            <input type="text" value="{{user._id}}" name="id" hidden>
                            <input type="text" value="{{#if address}}{{address._id}}{{else}}NO Address {{/if}}" name="addressId" hidden>
                            
                            <label for="">UserName</label>
                            <input type="text" value="{{user.userName}}" name="userName"
                                class="input form-control mb-2">
                            
                            <label for="">Mobile</label>
                            <input type="text" value="{{#if address}}{{address.mobile}}{{else}}NO Address {{/if}}" name="mobile" class="input form-control mb-2">
                            
                            <label for="">Email</label>
                            <input type="email" value="{{user.email}}" name="email" class="input form-control mb-2">
                            
                            <label for="dropdown" class="form-label">Country</label>
                            <select class="form-select" name="country" id="dropdown" aria-label="Select option">
                                <option disabled selected>{{#if address}}{{address.country}}{{/if}}</option>
                                <option value="India">India</option>
                                <option value="USA">USA</option>
                                <option value="UAE">UAE</option>
                            </select>
                            
                            <div class="text-center">
                                <button type="submit" class="btn btn-warning mt-4 w-100">Edit</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="/javaScript/user/editUserProfile.js"></script>