</header>

<div class="container mt-3">
    <div class="row mt-5">
        <!-- Sidebar -->
        <div class="col-md-2">
            <div class="container-fluid">
                <span class="fw-bold">Account & Settings</span>
                <hr>
            </div>
            <nav class="nav flex-column mt-2">
                <a href="/userProfile" class="btn btn-outline-warning mb-2 active">User Details</a>
                <a href="/orders" class="btn btn-outline-warning mb-2">Orders</a>
                <a href="/whishList" class="btn btn-outline-warning mb-2">Wishlist</a>
                <a href="/wallet" class="btn btn-outline-warning mb-2">Wallet</a>
                <a href="/logOut" class="btn text-warning mb-2 mt-4 px-auto"><i
                        class="fa-solid fa-right-from-bracket me-3"></i>Log out</a>
            </nav>
        </div>

        <!-- Main Content -->
        <div class="col-md-10 mt-4">
            <!-- Top Navigation Buttons -->
            <div class="row d-flex justify-content-center mb-4">
                <div class="col-md-3">
                    <a href="/userProfile">
                        <button class="btn btn-outline-warning w-100 active">Update User</button>
                    </a>
                </div>
                <div class="col-md-3">
                    <a href="/passwordUpdate">
                        <button class="btn btn-outline-warning w-100">Password</button>
                    </a>
                </div>
                <div class="col-md-3">
                    <a href="/address">
                        <button class="btn btn-outline-warning w-100">Address</button>
                    </a>
                </div>
            </div>

            <!-- User Details and Edit Profile Section -->
            <div class="row g-4 mt-2">
                <!-- User Details Card -->
                <div class="col-md-4">
                    <div class="card shadow border-0 mb-4">
                        <div class="card-body">
                            <h5 class="card-title text-center mb-3">User Details</h5>
                            <p class="mb-2"><strong>Username:</strong> {{user.userName}}</p>
                            <p class="mb-2"><strong>Email:</strong> {{user.email}}</p>
                            <p class="mb-2"><strong>Mobile:</strong> {{#if address}}{{address.mobile}}{{else}}No
                                Address{{/if}}</p>
                            <p class="mb-2"><strong>Country:</strong> {{#if address}}{{address.country}}{{/if}}</p>
                        </div>
                    </div>

                    <!-- Referral Code Card -->
                    <div class="card shadow border-0">
                        <div class="card-body">
                            <h5 class="card-title text-center mb-3">Referral Code</h5>
                            <div class="input-group">
                                <input type="text" class="form-control" value="{{user.referralCode}}" id="referralCode"
                                    readonly>
                                <button class="btn btn-outline-secondary" onclick="copyReferralCode()">Copy</button>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Edit Form Card -->
                <div class="col-md-8">
                    <div class="card shadow border-0">
                        <div class="card-body">
                            <h5 class="card-title text-center mb-4">Edit Profile</h5>
                            <form action="/userEdit?_method=PATCH" method="post" id="editUserForm">
                                <input type="text" value="{{user._id}}" name="id" hidden>
                                <input type="text" value="{{#if address}}{{address._id}}{{else}}NO Address{{/if}}"
                                    name="addressId" hidden>

                                <div class="mb-3">
                                    <label for="userName" class="form-label">Username</label>
                                    <input type="text" value="{{user.userName}}" name="userName" class="form-control"
                                        id="userName">
                                    <div id="userNameError" class="text-danger" style="display:none;">Please enter a
                                        valid username.</div>
                                </div>

                                <div class="mb-3">
                                    <label for="mobile" class="form-label">Mobile</label>
                                    <input type="text"
                                        value="{{#if address}}{{address.mobile}}{{else}}No Address{{/if}}" name="mobile"
                                        class="form-control" id="mobile">
                                    <div id="mobileError" class="text-danger" style="display:none;">Please enter a valid
                                        mobile number.</div>
                                </div>

                                <div class="mb-3">
                                    <label for="email" class="form-label">Email</label>
                                    <input type="email" value="{{user.email}}" name="email" class="form-control"
                                        id="email">
                                    <div id="emailError" class="text-danger" style="display:none;">Please enter a valid
                                        email.</div>
                                </div>

                                <div class="mb-3">
                                    <label for="country" class="form-label">Country</label>
                                    <select class="form-select" name="country" id="country">
                                        <option disabled selected>{{#if address}}{{address.country}}{{else}}Select
                                            Country{{/if}}</option>
                                        <option value="India">India</option>
                                        <option value="USA">USA</option>
                                        <option value="UAE">UAE</option>
                                    </select>
                                    <div id="countryError" class="text-danger" style="display:none;">Please select a
                                        country.</div>
                                </div>

                                <button type="submit" class="btn btn-warning w-100">Save Changes</button>
                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="/javaScript/user/editUserProfile.js"></script>