<link rel="stylesheet" href="/styles/user/whishList.css">


<header>
    <nav class="navbar navbar-expand-lg  shadow-navbar">
        <div class="container-fluid py-auto px-auto ">
            <h3 id="head" class="m-2">WATCH <span style="color: #ffac33;">LY</span></h3>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mx-auto mb-2 mb-lg-0">
                    <li class="nav-item"><a class="nav-link active" aria-current="page" href="/home">Home</a></li>
                    <li class="nav-item"><a class="nav-link active" aria-current="page" href="/orders">Orders</a></li>
                    <li class="nav-item"><a class="nav-link active" aria-current="page" href="/ProductList">Products</a>
                    </li>
                    <li class="nav-item"><a class="nav-link active" aria-current="page" href="/contactus">Contact</a>
                    </li>
                    <li class="nav-item"><a class="nav-link active" aria-current="page" href="/Aboutus">About us</a>
                    </li>
                </ul>

                <ul class="navbar-nav ml-auto mb-2 mb-lg-0">
                    <div class="input-group">
                        <form class="d-flex" action="/ProductList" method="GET">
                            <button class="btn btn-outline" type="submit"><i
                                    class="fa-solid fa-magnifying-glass"></i></button>
                        </form>
                    </div>  
                    <li class="nav-item"><a class="nav-link active" aria-current="page" href="/whishList"><i
                                class="fa-regular fa-heart"></i></a></li>
                    <li class="nav-item"><a class="nav-link active" aria-current="page" href="/userProfile"><i
                                class="fa-regular fa-user"></i></a></li>
                    <li class="nav-item"><a class="nav-link active" aria-current="page" href="/cart"><i
                                class="fa-solid fa-cart-shopping"></i></a></li>
                </ul>
            </div>
        </div>
    </nav>
</header>

<div class="container mt-3">
    <div class="row mt-5 ">
        <!-- Sidebar -->
        <div class="col-md-2">
            <div class="container-fluid">
                <span class="fw-bold">Account & Settings</span>
                <hr>
            </div>

            <nav class="nav flex-column mt-2">
                <a href="/userProfile" class="btn btn-outline-warning mb-2 ">User Details</a>
                <a href="/orders" class="btn btn-outline-warning mb-2 ">Orders</a>
                <a href="/whishList" class="btn btn-outline-warning mb-2 active">whishList</a>
                <a href="/wallet" class="btn btn-outline-warning mb-2">wallet</a>
                <a href="/logOut" class="btn text-warning mb-2  mt-4 px-auto"><i
                        class="fa-solid fa-right-from-bracket me-3"></i>Log out</a>
            </nav>
        </div>

        <div class="col-md-10 formContainer mt-4 bg1">
            <div class="container">
                <h3>Your Wishlist</h3>
                {{#if products.length}}
                <div class="row">
                    {{#each products}}
                    <div class="col-md-4 wishlistItem" id="wishlist-item-{{this._id}}">
                        <div class="card mb-4 shadow-sm">
                            <img src="/uploads/{{this.images.[0]}}" class="card-img-top" alt="Product Image">
                            <div class="card-body mt-2 text-center">
                                <div class="mb-2">
                                    <h6 class="card-title">{{this.productName}}</h6>
                                    <p class="card-text">Price: <span class="text-warning">â‚¹{{this.productPrice}}</span>
                                    </p>
                                </div>
                                {{#if this.productStock}}
                                <form action="/addToCart" method="POST" class="mt-auto">
                                    <input type="hidden" name="productId" value="{{_id}}">
                                    <input type="number" name="quantity" value="1" min="1" hidden>
                                    <button type="submit" class="btn btn-outline-warning w-100 mb-2">Add to
                                        Cart</button>
                                </form>
                                {{/if}}

                                <form class="removeWishlistForm">
                                    <input type="hidden" name="productId" value="{{this._id}}">
                                    <button type="submit" class="btn btn-outline-danger w-100">Remove from
                                        Wishlist</button>
                                </form>

                            </div>
                        </div>
                    </div>
                    {{/each}}
                </div>
                {{else}}
                <div class="d-flex justify-content-center align-items-center mt-5  display-6">
                    <p>Your wishlist is empty</p>
                </div>
                {{/if}}
            </div>
        </div>
    </div>
</div>


<div class="toast-container position-fixed bottom-0 end-0 p-2">
    <div id="toast" class="toast align-items-center text-bg-info border-0" role="alert" aria-live="assertive"
        aria-atomic="true">
        <div class="d-flex">
            <div class="toast-body">
                <strong id="toast-title" class="me-auto"></strong>
                <div id="toast-body"></div>
            </div>
            <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"
                aria-label="Close"></button>
        </div>
    </div>
</div>

<script src="/javaScript/user/whishlist.js"></script>