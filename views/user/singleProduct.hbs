<link rel="stylesheet" href="/styles/user/singleProduct.css">

<header>
  <nav class="navbar navbar-expand-lg  shadow-navbar">
    <div class="container-fluid py-auto px-auto">
      <h3 id="head" class="m-2">WATCH <span style="color: #ffac33;">LY</span></h3>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mx-auto mb-2 mb-lg-0">
          <li class="nav-item"><a class="nav-link active" aria-current="page" href="/user/home">Home</a></li>
          <li class="nav-item"><a class="nav-link active" aria-current="page" href="/user/orders">Orders</a></li>
          <li class="nav-item"><a class="nav-link active" aria-current="page" href="/user/ProductList">Products</a></li>
          <li class="nav-item"><a class="nav-link active" aria-current="page" href="/user/contactus">Contact</a></li>
          <li class="nav-item"><a class="nav-link active" aria-current="page" href="/user/Aboutus">About us</a></li>
        </ul>

        <ul class="navbar-nav ml-auto mb-2 mb-lg-0">
          <li class="nav-item"><a class="nav-link active" aria-current="page" href="#"><i
                class="fa-solid fa-magnifying-glass"></i></a></li>
          <li class="nav-item"><a class="nav-link active" aria-current="page" href="#"><i
                class="fa-regular fa-heart"></i></a></li>
          <li class="nav-item"><a class="nav-link active" aria-current="page" href="#"><i
                class="fa-regular fa-user"></i></a></li>
          <li class="nav-item"><a class="nav-link active" aria-current="page" href="#"><i
                class="fa-solid fa-cart-shopping"></i></a></li>
        </ul>
      </div>
    </div>
  </nav>
</header>

<main>
  <div class="container" id="containerOne">
    <div class="row">
      <div class="col-md-5">

        <div id="imageZoom" style="--url: url('/uploads/{{product.images.[0]}}');
            --zoom-x:0%; --zoom-y:0%; --display:none;">
          <img src="/uploads/{{product.images.[0]}}" alt="productImage" id="productImg">
        </div>

        <div class="d-flex justify-content-center">

          <div class="card multipleImage">
            <img src="/uploads/{{product.images.[0]}}" class="thumbnail" alt="">
          </div>
          <div class="card multipleImage">
            <img src="/uploads/{{product.images.[1]}}" class="thumbnail" alt="">
          </div>
          <div class="card multipleImage">
            <img src="/uploads/{{product.images.[2]}}" class="thumbnail " alt="">
          </div>

        </div>

      </div>
      <div class="col-md-7">
        <nav aria-label="breadcrumb">
          <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/user/home">Home</a></li>
            <li class="breadcrumb-item"><a href="/user/ProductList">Products</a></li>
            <li class="breadcrumb-item active" aria-current="page">{{product.productName}}</li>
          </ol>
        </nav>
        <div class="d-flex">
          <h5>{{product.productName}}</h5>
          <i class="fa-solid fa-heart wish-icon"></i>
        </div>

        <div class="star-rating mt-3">
          {{#if (eq totalReviews 0)}}

          {{#each (range 1 5)}}
          <i class="far fa-star"></i>
          {{/each}}
          {{else}}


          {{#each (range 1 5)}}
          {{#if (gt @index (floor ../averageRating))}}
          {{#if (eq (mod ../averageRating 1) 0)}}
          <i class="far fa-star"></i>
          {{else}}
          {{#if (eq @index (add (floor ../averageRating) 1))}}
          <i class="fas fa-star-half-alt"></i>
          {{else}}
          <i class="far fa-star"></i>
          {{/if}}
          {{/if}}
          {{else}}
          <i class="fas fa-star"></i>
          {{/if}}
          {{/each}}
          {{/if}}
        </div>

        <h6 class="price mt-3">₹{{product.productPrice}}</h6>

        {{#if product.productStock}}
        <p class="in-stock">In Stock ({{product.productStock}} items available)</p>
        {{else}}
        <p class="out-of-stock">Sold Out</p>
        {{/if}}

        {{#unless product.productStock}}
        <p class="h6">This item is currently out of Stock</p>
        <div class="soldoutemail d-flex">
          <input type="email" class="form-control emilsold" placeholder="Enter your email to get notified" />
          <button class="notifybtn">Notify me</button>
        </div>
        {{/unless}}

        <hr class="medmHr">

        <div class="scrollable-content">
          <p>{{product.description}}</p>
          <hr>

          <h5>Highlights</h5>
          <ul class="product-highlights">
            <li><strong>Brand:</strong> {{product.highlights.brand}}</li>
            <li><strong>Model:</strong> {{product.highlights.model}}</li>
            <li><strong>Case Material:</strong> {{product.highlights.caseMaterial}}</li>
            <li><strong>Dial Color:</strong> {{product.highlights.dialColor}}</li>
            <li><strong>Water Resistance:</strong> {{product.highlights.waterResistance}}</li>
            <li><strong>Movement Type:</strong> {{product.highlights.movementType}}</li>
            <li><strong>Band Material:</strong> {{product.highlights.bandMaterial}}</li>
            <li><strong>Features:</strong> {{#each product.highlights.features}}<span>{{this}}</span>{{#unless @last}},
              {{/unless}}{{/each}}</li>
            <li><strong>Warranty:</strong> {{product.highlights.warranty}}</li>
          </ul>

          <h6>Color variants:</h6>
          <div class="d-flex">
            <div class="card colorVariatCard">
              <img src="/wo.jpg" alt="">
            </div>
            <div class="card colorVariatCard">
              <img src="/wo.jpg" alt="">
            </div>
            <div class="card colorVariatCard">
              <img src="/wo.jpg" alt="">
            </div>
          </div>

          <h6 class="mt-3">Quantity:</h6>
          <form action="/user/addToCart" method="POST" id="addToCartForm">
            <input type="hidden" name="productId" value="{{product._id}}">
            <div class="quantity">
              <button type="button" class="quantity-btn minus">-</button>
              <input type="number" name="quantity" id="product-quantity" value="1" min="1">
              <button type="button" class="quantity-btn plus">+</button>
            </div>
              <button type="submit" class="btn btn-outline-warning mt-3">Add to cart</button>
          </form>
          <button class="btn btn-outline-warning mt-2 ">Buy</button>
        </div>

      </div>
    </div>


    <div class="row mt-5">
      <div class="col-md-12">
        <h5 class="text-center mt-3">Related Products</h5>
        <hr>
        <div class="row">
          {{#each relatedProducts}}
          <div class="col-md-3 mb-4">
            <div class="card h-100">
              <a href="/user/singleProduct/{{_id}}">
                <img src="/uploads/{{images.[0]}}" class="card-img-top" alt="Product Image">
              </a>
              <div class="card-body">
                <div class="d-flex">
                  <h5 class="card-title ">{{productName}}</h5>
                  <i class="fa-solid fa-heart wish-icon"></i>
                </div>
                <p class="card-text text-warning">₹{{productPrice}}</p>
                <a href="#" class="btn btn-outline-warning ">Add to Cart</a>
              </div>
            </div>
          </div>
          {{/each}}

        </div>
      </div>
    </div>

    <div class="row mt-5">
      <h5 class="mt-5">Customer Reviews</h5>
      <hr>
      <div class="col-md-12">

        <div class="rating-summary ">
          <div class="rating-overall">
            <h2>{{averageRating}}/5</h2>
            <div class="stars">
              {{#if (eq totalReviews 0)}}

              {{#each (range 1 5)}}
              <i class="far fa-star"></i>
              {{/each}}
              {{else}}


              {{#each (range 1 5)}}
              {{#if (gt @index (floor ../averageRating))}}
              {{#if (eq (mod ../averageRating 1) 0)}}
              <i class="far fa-star"></i>
              {{else}}
              {{#if (eq @index (add (floor ../averageRating) 1))}}
              <i class="fas fa-star-half-alt"></i>
              {{else}}
              <i class="far fa-star"></i>
              {{/if}}
              {{/if}}
              {{else}}
              <i class="fas fa-star"></i>
              {{/if}}
              {{/each}}
              {{/if}}
            </div>
            <p>From {{totalReviews}} reviews</p>
          </div>
        </div>

      </div>

      <div class="col-md-6">
        <h5>Submit Your Review</h5>
        <form action="/user/singleProduct/{{product._id}}/review" method="POST">
          <div class="form-group">
            <label for="customerName">Name:</label>
            <input type="text" class="form-control" id="customerName" name="customerName">
          </div>
          <div class="form-group">
            <label for="email">Email (optional):</label>
            <input type="email" class="form-control" id="email" name="email">
          </div>
          <div class="form-group">
            <label for="rating">Rating:</label>
            <div class="star-rating">
              <input type="hidden" name="rating" id="rating" value="0">
              <i class="far fa-star" data-value="1"></i>
              <i class="far fa-star" data-value="2"></i>
              <i class="far fa-star" data-value="3"></i>
              <i class="far fa-star" data-value="4"></i>
              <i class="far fa-star" data-value="5"></i>
            </div>
          </div>
          <div class="form-group">
            <labelfor="comment">Comment:</label>
              <textarea class="form-control" id="comment" name="comment" rows="4"></textarea>
          </div>

          <button class="btn btn-outline-warning mt-3" type="submit">Submit Review</button>
        </form>
      </div>
    </div>

    <div class="row">
      <div class="col-md-12">
        <div id="reviews">
          {{#each reviews}}
          <hr>
          <div class="review d-flex">
            <div>
              <h6>{{customerName}}</h6>
              <p><small>{{formatDate date}}</small></p>
              <div class="star-rating">
                {{#each (range 1 5)}}
                {{#if (compare @index ../rating)}}
                <i class="fas fa-star text-warning"></i>
                {{else}}
                <i class="far fa-star text-warning"></i>
                {{/if}}
                {{/each}}
              </div>
            </div>
            <div class="ms-5 text-center">
              <p class="mt-1">{{comment}}</p>
            </div>
          </div>
          {{else}}
          <p>No reviews yet. Be the first to review!</p>
          {{/each}}
          <hr>
        </div>
      </div>
    </div>
  </div>
  </div>
</main>

<script src="/javaScript/user/singleProduct.js"></script>