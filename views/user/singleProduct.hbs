<link rel="stylesheet" href="/styles/user/singleProduct.css">

<header>
  <nav class="navbar navbar-expand-lg bg-body-tertiary">
    <div class="container-fluid py-auto px-auto">
      <h3 id="head" class="m-2">WATCH <span style="color: #ffac33;">LY</span></h3>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mx-auto mb-2 mb-lg-0">
          <li class="nav-item"><a class="nav-link active" aria-current="page" href="#">Home</a></li>
          <li class="nav-item"><a class="nav-link active" aria-current="page" href="#">Orders</a></li>
          <li class="nav-item"><a class="nav-link active" aria-current="page" href="#">Products</a></li>
          <li class="nav-item"><a class="nav-link active" aria-current="page" href="#">Contact</a></li>
          <li class="nav-item"><a class="nav-link active" aria-current="page" href="#">About us</a></li>
        </ul>

        <ul class="navbar-nav ml-auto mb-2 mb-lg-0">
          <li class="nav-item"><a class="nav-link active" aria-current="page" href="#"><i
                class="fa-solid fa-magnifying-glass"></i></a></li>
          <li class="nav-item"><a class="nav-link active" aria-current="page" href="#"><i
                class="fa-regular fa-heart"></i></a></li>
          <li class="nav-item"><a class="nav-link active" aria-current="page" href="#"><i
                class="fa-regular fa-user"></i></a></li>
          <li class="nav-item"><a class="nav-link active" aria-current="page" href="#"><i
                class="fa-solid fa-cart-shopping"></i></a></li>
        </ul>
      </div>
    </div>
  </nav>
</header>

<main>
  <div class="container" id="containerOne">
    <div class="row">
      <div class="col-md-5">

        <div class="card">
          <img src="/uploads/{{product.images.[0]}}" alt="productImage" id="ProductImg">
        </div>

        <div class="d-flex justify-content-center">

          <div class="card multipleImage">
            <img src="/uploads/{{product.images.[0]}}" alt="">
          </div>
          <div class="card multipleImage">
            <img src="/uploads/{{product.images.[1]}}" alt="">
          </div>
          <div class="card multipleImage">
            <img src="/uploads/{{product.images.[2]}}" alt="">
          </div>

        </div>

      </div>
      <div class="col-md-7">
        <div class="d-flex">
          <h5>{{product.productName}}</h5>
          <i class="fa-solid fa-heart wish-icon"></i>
        </div>

        <div class="star-rating mt-3">
          <i class="far fa-star" data-value="1"></i>
          <i class="far fa-star" data-value="2"></i>
          <i class="far fa-star" data-value="3"></i>
          <i class="far fa-star" data-value="4"></i>
          <i class="far fa-star" data-value="5"></i>
        </div>

        <h6 class="price mt-3">₹{{product.productPrice}}</h6>

        <hr class="medmHr">
        <p>.{{product.description}}</p>
        <hr class="medmHr">

        <h6>Color variants:</h6>

        <div class="d-flex">
          <div class="card colorVariatCard">
            <img src="/wo.jpg" alt="">
          </div>
          <div class="card colorVariatCard">
            <img src="/wo.jpg" alt="">
          </div>
          <div class="card colorVariatCard">
            <img src="/wo.jpg" alt="">
          </div>
        </div>

        <h6 class="mt-3">Quantity:</h6>

        <div class="quantity">
          <button class="quantity-btn minus">-</button>
          <input type="number" id="product-quantity" value="1" min="1">
          <button class="quantity-btn plus">+</button>
        </div>

        <div class="d-flex btndiv">
          <button class="btn">Add to cart</button>
          <button class="btn ">Buy</button>
        </div>
      </div>


      <div class="row mt-5">
        <div class="col-md-12">
          <h5 class="text-center mt-3">Related Products</h5>
          <hr>
          <div class="row">
            {{#each relatedProducts}}
            <div class="col-md-3 mb-4">
              <div class="card h-100">
                <a href="/user/singleProduct/{{_id}}">
                  <img src="/uploads/{{images.[0]}}" class="card-img-top" alt="Product Image">
                </a>
                <div class="card-body">
                  <div class="d-flex">
                    <h5 class="card-title ">{{productName}}</h5>
                    <i class="fa-solid fa-heart wish-icon"></i>
                  </div>
                  <p class="card-text text-warning">₹{{productPrice}}</p>
                  <a href="#" class="btn btn-outline-warning ">Add to Cart</a>
                </div>
              </div>
            </div>
            {{/each}}

          </div>
        </div>
      </div>

      <div class="row mt-5">
        <h5 class="mt-5">Customer Reviews</h5>
        <hr>
        <div class="col-md-6">

          <div class="star-rating mt-3">
            <i class="far fa-star" data-value="1"></i>
            <i class="far fa-star" data-value="2"></i>
            <i class="far fa-star" data-value="3"></i>
            <i class="far fa-star" data-value="4"></i>
            <i class="far fa-star" data-value="5"></i>
          </div>

        </div>
        <div class="col-md-6">
          <h5>Submit Your Review</h5>
          <form action="/user/singleProduct/{{product._id}}/review" method="POST">
            <div class="form-group">
              <label for="customerName">Name:</label>
              <input type="text" class="form-control" id="customerName" name="customerName">
            </div>
            <div class="form-group">
              <label for="email">Email (optional):</label>
              <input type="email" class="form-control" id="email" name="email">
            </div>
            <div class="form-group">
              <label for="rating">Rating:</label>
              <div class="star-rating">
                <input type="hidden" name="rating" id="rating" value="0">
                <i class="far fa-star" data-value="1"></i>
                <i class="far fa-star" data-value="2"></i>
                <i class="far fa-star" data-value="3"></i>
                <i class="far fa-star" data-value="4"></i>
                <i class="far fa-star" data-value="5"></i>
              </div>
            </div>
            <div class="form-group">
              <labelfor="comment">Comment:</label>
                <textarea class="form-control" id="comment" name="comment" rows="4"></textarea>
            </div>

            <button class="btn mt-3" type="submit">Submit Review</button>
          </form>
        </div>
      </div>

      <div class="row">
        <div class="col-md-12">
          <div id="reviews">
            {{#each reviews}}
            <hr>
            <div class="review d-flex">
              <div>
              <h6>{{customerName}}</h6>
              <p><small>{{formatDate date}}</small></p>
              <p>(Rating: {{rating}})</p>
              </div>
              <div class="ms-5 text-center">
                <p class="mt-1">{{comment}}</p>
              </div>   
            </div>
            {{else}}
            <p>No reviews yet. Be the first to review!</p>
            {{/each}}
            <hr>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>

<script src="/javaScript/user/singleProduct.js"></script>