<link rel="stylesheet" href="/styles/user/home.css">



{{>header}}

{{!----------------------- product showcase 1 ---------------------------}}

<section class="bgcolor py-5">
  <div class="container">
    <div class="card shadow-lg border-0" style="border-radius: 15px;">
      <div class="row g-0">

        <div class="col-md-6 d-flex flex-column justify-content-center p-5">
          <h1 class="text-warning fw-bold">LUXURY & ELEGANCE</h1>
          <p class="text-muted mt-3">Discover the latest in elegance and style. Our exclusive collection awaits you.</p>
          <div class="mt-4">
            <a href="#" class="btn btn-warning me-3">Shop now</a>
            <a href="#" class="btn btn-outline-warning">More</a>
          </div>
        </div>
     
        <div class="col-md-6 d-flex align-items-center">
          <img src="/image/user/HD_Black_Apple_Smart_Watch_Series_2_PNG-removebg-preview.png" 
               alt="Luxury Watch" class="img-fluid rounded-end">
        </div>
      </div>
    </div>
  </div>
</section>

{{!---------------- feature show case -----------------}}

<div class="container my-5 py-4 text-center bg-light rounded-3 shadow-sm">
  <div class="row mx-auto">
    <div class="col-md-4 align1 py-3">
      <i class="fa-solid fa-truck text-primary display-4 mb-3"></i>
      <h5 class="fw-bold">Quick Shipping</h5>
      <p class="text-muted">Get your products delivered fast and on time.</p>
    </div>
    <div class="col-md-4 align1 py-3">
      <i class="fa-regular fa-credit-card text-success display-4 mb-3"></i>
      <h5 class="fw-bold">Easy Payment</h5>
      <p class="text-muted">Multiple payment options for your convenience.</p>
    </div>
    <div class="col-md-4 align1 py-3">
      <i class="fa-solid fa-rotate text-warning display-4 mb-3"></i>
      <h5 class="fw-bold">Reliable & Secure</h5>
      <p class="text-muted">Trusted and secure shopping experience.</p>
    </div>
  </div>
</div>

<!-- Feature Products Section -->
<section class="container my-5">
  <a href="#">
    <h2 class="text-left mb-4 border-bottom pb-2 text-dark">Feature Products</h2>
  </a>
  <div class="row">
    <!-- Product Card 1 -->
    {{#each featuredProduct}}
    <div class="col-12 col-sm-6 col-md-3 mb-4">
      <div class="card shadow-sm border-0 rounded-3 h-100 p-2">
        <a href="/singleProduct/{{_id}}"><img src="{{images.[0]}}" class="card-img-top p-2" alt="Watch 1"></a>
        <div class="card-body text-center">
          <h6 class="card-title fw-semibold text-dark">{{productName}}</h6>
          <p class="product-price text-warning fw-bold">₹{{productPrice}}</p>
        </div>
      </div>
    </div>
    {{/each}}

  </div>
</section>

<!-- Product Categories Section -->
<div class="container my-5">
  <div class="row">
    <!-- Best Sellers -->
    <div class="col-md-4">
      <h3 class="text-center mb-3">Best Sellers</h3>
      {{#each bestSellers}}
      <div class="product-card pcard d-flex">
        <a href="/singleProduct/{{_id}}"><img src="{{images.[0]}}" class="imgSt" alt="{{productName}}"></a>
        <div class="mt-5">
          <p>{{productName}}</p>
          <span class="price">₹{{productPrice}}</span>
        </div>
      </div>
      {{/each}}
    </div>

    <!-- New Arrivals -->
    <div class="col-md-4">
      <h3 class="text-center mb-3">New Arrival</h3>
      {{#each newArrivals}}
      <div class="product-card pcard d-flex">
        <a href="/singleProduct/{{_id}}"><img src="{{images.[0]}}" class="imgSt" alt="{{productName}}"></a>
        <div class="mt-5">
          <p>{{productName}}</p>
          <span class="price">₹{{productPrice}}</span>
        </div>
      </div>
      {{/each}}
    </div>

    <!-- Best Rated -->
    <div class="col-md-4">
      <h3 class="text-center mb-4">Best Rated</h3>
      {{#each bestRatedProducts}}
      <div class="product-card mb-3 pcard d-flex">
        <a href="/singleProduct/{{_id}}"><img src="{{this.productDetails.images.[0]}}" class="imgSt" alt="{{this.productDetails.productName}}"></a>
        <div class="mt-5">
          <p>{{this.productDetails.productName}}</p>
        </div>
      </div>
      {{/each}}
    </div>
  </div>
</div>


<!-- Footer -->
{{>footer}}

<script src="/javaScript/user/home.js"></script>