{{!-- login page --}}

<link rel="stylesheet" href="/styles/user/signup.css">

<div class="container-fluid m-3">
    <h3 id="head" class="mx-auto">WATCH <span style="color: #ffac33;">LY</span></h3>
</div>
<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-md-4">
            <div class="card" id="card">
                <div>
                    <h3 class="text-center mt-5">Signup</h3>
                </div>
                <div class="d-flex justify-content-around mt-5">
                    <a href="/user/login"><h5 class="text-left">Login</h5></a>
                    <a href="/user/signup"><h5 class="text-right">Signup</h5></a>
                </div>
                <span id="msg" hidden>{{msg}}</span>
                <div class="card-body mt-2">
                    <form class="signup" id="signupForm" action="/user/sent-otp" method="post">
                        <div class="mb-3">
                            <input type="text" class="form-control" id="name"  name="userName" placeholder="username">
                        </div>
                        <div class="mb-3">
                            <input type="email" class="form-control" id="email" name="email" placeholder="Enter email">
                        </div>
                        <div class="mb-3">
                            <input type="password" class="form-control" id="password" name="password"
                                placeholder="Enter password">
                        </div>
                         <div class="mb-3"></div>
                            <input type="password" class="form-control" id="conformPassword" name="conformPassword"
                                placeholder="Conform password">
                        </div>
                       

                        <div class="d-grid col-6 mx-auto mb-4">
                            <button type="submit" class="btn btn-dark text-white">signup</button>
                        </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="/javaScript/user/signup.js"></script>