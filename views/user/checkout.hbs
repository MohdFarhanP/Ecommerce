                        <span><strong>Address:</strong> 456 Elm St</span>
                        <span><strong>City:</strong> Metropolis</span>
                        <span><strong>PinCode:</strong> 20002</span>
                        <span><strong>Country:</strong> USA</span>
                        <div class="d-flex justify-content-between mt-2">
                            <button type="button" class="btn btn-outline-warning btn-sm w-50" data-bs-toggle="modal"
                                data-bs-target="#editAddress">Edit</button>
                        </div>
                    </div>

                    <div class="address-card" onclick="selectCard(this)">
                        <span><strong>First Name:</strong> Alice</span>
                        <span><strong>Last Name:</strong> Johnson</span>
                        <span><strong>Email:</strong> ohnson@example.com</span>
                        <span><strong>Mobile Number:</strong> 1231231234</span>
                        <span><strong>Address:</strong> 789 Oak St</span>
                        <span><strong>City:</strong> Star City</span>
                        <span><strong>PinCode:</strong> 30003</span>
                        <span><strong>Country:</strong> USA</span>
                        <div class="d-flex justify-content-between mt-2">
                            <button type="button" class="btn btn-outline-warning btn-sm w-50" data-bs-toggle="modal"
                                data-bs-target="#editAddress">Edit</button>
                        </div>
                    </div>
                </div>
            </div>

            <div class=" row mt-5">
                <div class="col-md-12 me-2 ">
                    <form>
                        <div class="row">
                            <div class="col">
                                <label class="form-label">First Name:</label>
                                <input type="text" class="form-control" placeholder="Please enter your First name">
                            </div>
                            <div class="col">
                                <label class="form-label">Last name:</label>
                                <input type="text" class="form-control" placeholder="Please enter your Last name">
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <label class="form-label">Email Address:</label>
                                <input type="text" class="form-control" placeholder="Please enter your Email Address">
                            </div>
                            <div class="col">
                                <label class="form-label">Mobail Number:</label>
                                <input type="text" class="form-control" placeholder="Please enter your Mobail Number">
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <label class="form-label">Address:</label>
                                <input type="text" class="form-control" placeholder="Please enter your Address">
                            </div>
                            <div class="col">
                                <label class="form-label">Town/City:</label>
                                <input type="text" class="form-control" placeholder="Please enter your City Name">
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <label class="form-label">Pin Code:</label>
                                <input type="text" class="form-control" placeholder="Please enter your Pin Code">
                            </div>
                            <div class="col">
                                <label for="dropdown" class="form-label">Country</label>
                                <select class="form-select" id="dropdown" aria-label="Select option">
                                    <option selected>Select the Country</option>
                                    <option value="1">India</option>
                                    <option value="2">USA</option>
                                    <option value="3">UAE</option>
                                </select>
                            </div>
                        </div>
                        <div class="row d-flex justify-content-center">
                            <button class="btn btn-outline-warning mt-5 w-75 mb-5">Save Address</button>
                        </div>
                    </form>
                </div>
            </div>

        </div>

        <div class="col-md-4 mt-4">
            <div class="card p-3 shadow p-3 mb-5 ms-3 me-3">
                <div class="card-body">
                    <h5 class="card-title">Your Order</h5>

                    <hr>

                    <div class="d-flex justify-content-between flex-wrap mt-4">
                        <div>
                            <h6><strong>Products</strong></h6>
                            <h6 class=" mt-3 mb-2 text-body-secondary">Rado watch</h6>
                            <h6 class=" mb-2 text-body-secondary">Rolex R3 ghost</h6>
                            <h6 class=" mb-2 text-body-secondary">Rado watch</h6>
                            <h6 class=" mb-2 text-body-secondary">Rolex R3 ghost</h6>
                        </div>
                        <div class="text-end">
                            <h6><strong>Total</strong></h6>
                            <h6 class=" mt-3 mb-2"><small>₹34343</small></h6>
                            <h6 class=" mb-2"><small>₹25403</small></h6>
                            <h6 class=" mb-2"><small>₹34343</small></h6>
                            <h6 class=" mb-2"><small>₹25403</small></h6>
                        </div>
                    </div>

                    <hr>

                    <div class="d-flex justify-content-between flex-wrap mt-4">
                        <div>

                            <h6 class=" mt-3 mb-2 text-body-secondary"><strong>Subtotal</strong></h6>
                            <h6 class=" mb-2 text-body-secondary"><strong>Shipping</strong></h6>

                        </div>
                        <div class="text-end">

                            <h6 class=" mt-3 mb-2"><strong>₹34343</strong></h6>
                            <h6 class=" mb-4"><strong>₹25403</strong></h6>

                        </div>
                    </div>

                    <hr>

                    <div class="d-flex justify-content-between align-items-center">
                        <p class="mb-0"><strong>Order Total</strong></p>
                        <p class="mb-0"><strong>₹894356.00</strong></p>
                    </div>

                    <hr>

                    <div class="form-check mt-2 mb-2">
                        <input class="form-check-input custom-radio" type="radio" name="paymentOption" value="cash"
                            id="cashOnDelivery">
                        <label class="form-check-label" for="cashOnDelivery">
                            Cash on delivery
                        </label>
                    </div>
                    <div class="form-check mb-2">
                        <input class="form-check-input custom-radio" type="radio" name="paymentOption" value="razorpay"
                            id="razorpay" checked>
                        <label class="form-check-label" for="razorpay">
                            Razorpay
                        </label>
                    </div>
                    <div class="form-check mb-4">
                        <input class="form-check-input custom-radio" type="radio" name="paymentOption" value="wallet"
                            id="wallet">
                        <label class="form-check-label" for="wallet">
                            Wallet
                        </label>
                    </div>



                    <hr>

                    <div class="d-flex justify-content-center my-4">
                        <button class="btn btn-outline-warning w-75 w-md-50">Checkout</button>
                    </div>



                </div>
