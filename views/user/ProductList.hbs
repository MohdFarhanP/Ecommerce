<link rel="stylesheet" href="/styles/user/productList.css">

<header>
  <nav class="navbar navbar-expand-lg  shadow-navbar">
    <div class="container-fluid py-auto px-auto ">
      <h3 id="head" class="m-2">WATCH <span style="color: #ffac33;">LY</span></h3>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mx-auto mb-2 mb-lg-0">
          <li class="nav-item"><a class="nav-link active" aria-current="page" href="/home">Home</a></li>
          <li class="nav-item"><a class="nav-link active" aria-current="page" href="/orders">Orders</a></li>
          <li class="nav-item"><a class="nav-link active" aria-current="page" href="/ProductList">Products</a></li>
          <li class="nav-item"><a class="nav-link active" aria-current="page" href="/contactus">Contact</a></li>
          <li class="nav-item"><a class="nav-link active" aria-current="page" href="/Aboutus">About us</a></li>
        </ul>

        <ul class="navbar-nav ml-auto mb-2 mb-lg-0">
          <div class="input-group">
            <form class="d-flex" action="/search" method="GET">
              <input class="form-control px-5" type="search" name="q" placeholder="Search products..."
                aria-label="Search">
              <button class="btn btn-outline" type="submit"><i class="fa-solid fa-magnifying-glass"></i></button>
            </form>
          </div>
          <li class="nav-item"><a class="nav-link active" aria-current="page" href="/logOut"><i
                class="fa-regular fa-heart"></i></a></li>
          <li class="nav-item"><a class="nav-link active" aria-current="page" href="/userProfile"><i
                class="fa-regular fa-user"></i></a></li>
          <li class="nav-item"><a class="nav-link active" aria-current="page" href="/cart"><i
                class="fa-solid fa-cart-shopping"></i></a></li>
        </ul>
      </div>
    </div>
  </nav>
</header>

<!-- Filters Section -->
<div class="container mt-4">
  <div class="row">
    <!-- Sidebar - Filters -->
    <aside class="col-md-2">
      <h5>Filters</h5>
      <hr>
      <div class="filter-section">
        <h6>Price</h6>
        <div class="range-slider">
          <input type="range" class="form-range" id="minPrice" min="1000" max="10000000" step="10"
            oninput="updatePriceLabels()">
          <input type="range" class="form-range" id="maxPrice" min="1000" max="10000000" step="10"
            oninput="updatePriceLabels()">

          <div class="range-values">
            <span id="minPriceLabel">$0</span>
            <span id="maxPriceLabel">$1000</span>
          </div>
        </div>
      </div>
      <div class="filter-section">
        <h6>Brands</h6>
        <ul class="list-unstyled">
          <li><input type="checkbox" value="Rolex" class="brand-filter"> Rolex</li>
          <li><input type="checkbox" value="Casio" class="brand-filter"> Casio</li>
          <li><input type="checkbox" value="Rado" class="brand-filter"> Rado</li>
          <li><input type="checkbox" value="Omega" class="brand-filter"> Omega</li>
          <li><input type="checkbox" value="Titan" class="brand-filter"> Titan</li>
        </ul>
      </div>
      <div class="filter-section">
        <h6>Display</h6>
        <ul class="list-unstyled">
          <li><input type="checkbox" value="Analogue" class="display-type-filter"> Analogue</li>
          <li><input type="checkbox" value="Digital" class="display-type-filter"> Digital</li>
          <li><input type="checkbox" value="Chronograph" class="display-type-filter"> Chronograph</li>
        </ul>
      </div>
      <div class="filter-section">
        <h6>Band Color</h6>
        <ul class="list-unstyled">
          <li><input type="checkbox" value="Brown" class="color-filter"> Brown</li>
          <li><input type="checkbox" value="Black" class="color-filter"> Black</li>
          <li><input type="checkbox" value="Blue" class="color-filter"> Blue</li>
          <li><input type="checkbox" value="White" class="color-filter"> White</li>
          <li><input type="checkbox" value="Green" class="color-filter"> Green</li>
        </ul>
      </div>
      <div class="filter-section">
        <h6>Product Availability</h6>
        <ul class="list-unstyled">
          <li>
            <input type="checkbox" id="showOutOfStock" class="availability-filter"> Show Out of Stock Products
          </li>
        </ul>
      </div>
      <div class="filter-section mb-3">
        <h6>Sort By</h6>
        <div class="input-group">
          <select id="sortCriteria" class="form-select">
            <option value="popularity">Popularity</option>
            <option value="priceLowToHigh">Price: Low to High</option>
            <option value="priceHighToLow">Price: High to Low</option>
            <option value="averageRating">Average Ratings</option>
            <option value="featured">Featured</option>
            <option value="newArrivals">New Arrivals</option>
            <option value="aToZ">A-Z</option>
            <option value="zToA">Z-A</option>
          </select>
          <label class="input-group-text" for="sortCriteria">
            <i class="bi bi-sort-alpha-down"></i> <!-- Bootstrap Icons for visual enhancement -->
          </label>
        </div>
      </div>
      <button type="submit" class="btn btn-outline-warning mt-3" id="applyFilter">Filter</button>
    </aside>

    <!-- Main Content Area -->
    <main class="col-md-10 mx-auto">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/home">Home</a></li>
          <li class="breadcrumb-item active">Products</li>
        </ol>
      </nav>
      <h3 class="mb-4">{{#if searchQuery}}Search Results for "{{searchQuery}}"{{else}}All Products{{/if}}</h3>


      <div class="row" id="product-container">
        {{#each products}}
        <div class="col-md-4 mb-4">
          <div class="card h-100 d-flex flex-column">
            <a href="/singleProduct/{{_id}}">
              <img src="/uploads/{{images.[0]}}" class="card-img-top" alt="Product Image">
            </a>
            <div class="card-body d-flex flex-column">
              <div class="d-flex justify-content-between">
                <h5 class="productName">{{productName}}</h5>
                <i class="fa-solid fa-heart wish-icon"></i>
              </div>

              <!-- Display discount if applicable -->
              {{#if hasDiscount}}
              <div class="mb-2">
                <span class="text-muted text-decoration-line-through">₹{{productPrice}}</span>
                <span class="text-danger">₹{{finalPrice}}</span>
                <div class="badge bg-success">{{discountLabel}}</div>
              </div>
              {{else}}
              <p class="card-text text-warning">₹{{finalPrice}}</p>
              {{/if}}

              <form action="/addToCart" method="POST" class="mt-auto">
                <input type="hidden" name="productId" value="{{_id}}">
                <input type="number" name="quantity" value="1" min="1" hidden>
                <button type="submit" class="btn btn-outline-warning w-100">Add to Cart</button>
              </form>
            </div>
          </div>
        </div>
        {{/each}}
      </div>

      <!-- Pagination Controls -->
      <nav aria-label="Page navigation" class="pages">
        <ul class="pagination justify-content-center custom-pagination">
          {{#if (gt currentPage 1)}}
          <li class="page-item">
            <a class="page-link" href="?page={{sub currentPage 1}}" aria-label="Previous">
              <span aria-hidden="true">&laquo;</span>
            </a>
          </li>
          {{/if}}
          {{#each (range 1 totalPages)}}
          <li class="page-item {{#if (eq @this ../currentPage)}}active{{/if}}">
            <a class="page-link" href="?page={{@this}}">{{@this}}</a>
          </li>
          {{/each}}
          {{#if (lt currentPage totalPages)}}
          <li class="page-item">
            <a class="page-link" href="?page={{add currentPage 1}}" aria-label="Next">
              <span aria-hidden="true">&raquo;</span>
            </a>
          </li>
          {{/if}}
        </ul>
      </nav>

    </main>
  </div>
</div>

<!-- Footer -->
<footer class="bg-light py-4 mt-5">
  <div class="container">
    <div class="row">
      <div class="col-md-4">
        <h5>WATCH <span style="color: #ffac33;">LY</span></h5>
        <p>Your destination for premium watches. Combining elegance and functionality in every piece.</p>
      </div>
      <div class="col-md-4">
        <h5>Quick Links</h5>
        <ul class="list-unstyled">
          <li><a href="#">About Us</a></li>
          <li><a href="#">Contact</a></li>
          <li><a href="#">FAQs</a></li>
          <li><a href="#">Privacy Policy</a></li>
        </ul>
      </div>
      <div class="col-md-4">
        <h5>Follow Us</h5>
        <ul class="list-unstyled d-flex">
          <li class="me-3"><a href="#"><i class="fa fa-facebook"></i></a></li>
          <li class="me-3"><a href="#"><i class="fa fa-twitter"></i></a></li>
          <li class="me-3"><a href="#"><i class="fa fa-instagram"></i></a></li>
        </ul>
      </div>
    </div>
  </div>
</footer>

